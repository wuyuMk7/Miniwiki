{
  "compilerOptions": {
    "target": "es5",
    "module": "system",
    "outFile": "bundle.js",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "lib": ["es2015", "dom"],
    "typeRoots": [
      "./node_modules/@types",
    ]
  },
  "exclude": [
    "node_modules",
    "typings/main",
    "typings/main.d.ts"
  ]
}
